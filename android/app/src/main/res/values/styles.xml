<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Splash Screen Theme - CORRECTED to use a Drawable for windowBackground -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar"> <!-- Parent should be a NoActionBar theme -->
        <item name="android:windowBackground">@drawable/splash_background</item> <!-- IMPORTANT: Now correctly references a Drawable -->
        <item name="android:statusBarColor">@android:color/white</item> <!-- Optional: Match status bar color -->
        <item name="android:navigationBarColor">@android:color/white</item> <!-- Optional: Match navigation bar color -->
    </style>

</resources>
